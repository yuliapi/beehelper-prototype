{% for element in  allDays %}
    <label for="{{ element }}" class="btn btn-primary label-btn p-0">
        <input type="checkbox" autocomplete="off" id="{{ element }}"
               value="{{ element | truncate(3, true, "") }}">{{ element | truncate(3, true, "") | capitalize }}
        <br>
        <i class="fa fa-check" aria-hidden="true"></i>
    </label>
{% endfor %}
