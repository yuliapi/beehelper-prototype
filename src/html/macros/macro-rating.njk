{% macro chart(total, stars) %}
    {% set numbers = [{"5": stars[0]}, {"4": stars[1]}, {"3": stars[2]}, {"2": stars[3]}, {"1": stars[4]}] %}

    {% for num in numbers %}
        {% for key, value in num %}
            <div class="row">
                <div class="col-3">
                    <a href="" class="m-0">{{ key }} stars</a>
                </div>
                <div class="col-6 p-0">
                    <a href="">
                        <progress value="{{ value*100/total }}" max="100"></progress>
                    </a>
                </div>
                <div class="col-3">
                    <a href="" class="m-0">{{ (value*100/total) | int }}%</a>
                </div>
            </div>
        {% endfor %}

    {% endfor %}



{% endmacro %}