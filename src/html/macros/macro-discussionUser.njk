{% macro add(content) %}
    <div class="card">
        <div class="card-header" role="tab" id="{{ content.name }}">

            <a class="d-inline-block" href="#viewProfile_&{{ content.name }}">
                <i class="fa fa-user mr-2" aria-hidden="true"></i> {{ content.name }}
            </a>
            {% if content.confirm === "true" %}
                <i class="fa fa-check text-success" aria-hidden="true"></i>

            {% else %}
                <i class="fa fa-times text-danger"
                   aria-hidden="true"></i>

            {% endif %}
            <div class="d-inline-block">
                <a class="" data-toggle="collapse" data-parent="#accordion"
                   href="#collapse{{ content.name }}"
                   aria-expanded="true" aria-controls="collapse{{ content.name }}">
                    Messages
                    {% if content.newMessages | length %}
                        <i class="fa fa-envelope-o" aria-hidden="true"><span
                                    class="badge badge-pill badge-default">{{ content.newMessages }}</span></i>

                    {% endif %}
                </a>
            </div>
            {% if content.yourConfirm === "true" %}
                <p class="d-inline-block float-right mb-0">Confirmed</p>
                {% elif content.yourConfirm === "false" %}
                <p class="d-inline-block float-right mb-0">Declined</p>
            {% else %}
                <div class="float-right">
                    <button>Confirm</button>
                    <button>Decline</button>
                </div>

            {% endif %}
        </div>

        <div id="collapse{{ content.name }}" class="collapse" role="tabpanel"
             aria-labelledby="heading{{ content.name }}">
            <div class="card-block">
                <p>Here will be all messages. You also will be able to write a response</p>
            </div>
        </div>
    </div>
{% endmacro %}