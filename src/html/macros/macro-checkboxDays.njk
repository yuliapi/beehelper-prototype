{% macro checkbox(id, name, value) %}
    <label for="{{ id }}" class="btn btn-primary label-btn">
        <input type="checkbox" name="{{ name }}" autocomplete="off"
               id="{{ id }}"
               value="{{ value }}">{{ value | capitalize }}
        <br>
        <i class="fa fa-check" aria-hidden="true"></i>
    </label>
{% endmacro %}